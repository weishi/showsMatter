{
  "manifest_version": 2,

  "name": "showsMatter",
  "description": "Subscribes to your favorite show and pushes to Xunlei Lixian",
  "version": "1.0.5",

  "icons": { 
    "16": "images/tv.png",
    "48": "images/tv.png",
    "128": "images/tv.png"
  },

  "content_security_policy": "script-src 'self' 'unsafe-eval' https://ssl.google-analytics.com; object-src 'self'",
  
  "browser_action": {
    "default_icon": "images/tv.png",
    "default_popup": "popup.html"
  },
  
  "options_page": "options.html",
  
  "permissions": [
    "cookies",
    "http://*/"
  ]
}
