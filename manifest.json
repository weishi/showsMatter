{
  "manifest_version": 2,

  "name": "showsMatter",
  "description": "A chrome extension that subscribes to your favorite show and pushes to Xunlei Lixian",
  "version": "1.0.4",

  "icons": { 
    "16": "images/tv-icon48.png",
    "48": "images/tv-icon48.png",
    "128": "images/tv-icon48.png" },

  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  
  "browser_action": {
    "default_icon": "images/tv-icon.png",
    "default_popup": "popup.html"
  },
  "options_page": "options.html",
  "permissions": [
    "cookies",
    "http://*/"
  ]
}
